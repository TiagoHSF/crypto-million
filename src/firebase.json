{
  "functions": {
    "source": "src", 
    "predeploy": [
      "npx ts-node index.ts" 
    ],
    "runtime": "nodejs14"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
